{% extends 'layout.njk' %}


{% block content %}
<section class="shop container">
    <h2>Ultimos Produtos</h2>

    <div class="items">
        {%for product in products %}
        <div class="product">
            <div 
            class="image"
            style="background-image: url('{{product.image if product.image else '//placehold.it/500x360'}}')"
            >
            </div>

            {%if product.oldPrice != product.price %}
            <div class="old-price">{{product.oldPrice}}</div>
            {%endif%}

            <p>{{product.price}}</p>
            <h4>{{product.name}}</h4>


            <a href="/products/{{product.id}}" class="button">Ver Produto</a>
        </div>
        {%endfor%}
    </div>
</section>

{% endblock content %}